<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_backgroud_block"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2">


<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="vertical"-->
<!--                android:layout_gravity="center_vertical"-->
<!--                android:background="@drawable/profile_block"-->
<!--                android:paddingStart="35dp"-->
<!--                android:paddingEnd="35dp"/>-->

<!--            </LinearLayout>-->


            <LinearLayout
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/profile_block">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Hi,"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:textSize="30sp"/>
                    <TextView
                        android:id="@+id/yourName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Your Name"
                        android:layout_marginStart="20dp"
                        android:textSize="40sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingTop="10dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/circle_add" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="35dp"
            android:layout_marginTop="15dp"
            android:paddingEnd="35dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:background="@drawable/profile_stats_block"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My stats"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/quizsetTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz Sets: 20"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/averageTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completion Average: 75%"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/ratingTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Rating: 143"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_pencil_icon" />
                <Button
                    android:id="@+id/logOutButton"
                    android:layout_marginLeft="10dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_logout_icon"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>