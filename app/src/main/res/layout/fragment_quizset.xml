<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragments.QuizsetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_block"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:layout_weight="6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.5">
                <TextView
                    android:id="@+id/searchText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/input_border"
                    android:drawableLeft="@drawable/search"
                    android:text="Search.."
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/block_border"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:layout_weight="10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sets"
                    android:textSize="24sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="35dp"
                    android:paddingEnd="35dp">
                    <LinearLayout
                        android:id="@+id/moveButton"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/quizset_block"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/progress"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:text="42%"
                            android:background="@drawable/circle"
                            />

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:text="Python-Object Oriented Programming study"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/addQuizset"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/add_item_block"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:background="@drawable/circle_add"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:text="@string/add_new_quizset"
                            />

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>